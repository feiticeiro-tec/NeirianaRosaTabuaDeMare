                    text:root.data
                    font_name:'./NeirianaRosa/font/buttershine.otf'
                    halign:'center'
                    font_size:dp(24)
                    color:142/255,105/255,78/255,1
        MDBoxLayout:
            MDBoxLayout:
                id:article
                orientation:'vertical'
                spacing:dp(15)
                pos_hint:{'center_y':0.7}
        MDBoxLayout:
            id:stars
            orientation:'vertical'
